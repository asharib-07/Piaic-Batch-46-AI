//------ 40 ------//---------------------------------------------------------
//-----Album -------//
console.log("\n")
console.log("\x1b[1;4mAlbum.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

function make_album(artist: string, title: string, tracks?: number): object {
    let album: any = {
      artist: artist,
      title: title
    };
  
    if (tracks) {
      album.tracks = tracks;
    }
  
    return album;
  }
  
  // Calling the function to create three album objects
  let album1 = make_album("Artist 1", "Album 1");
  let album2 = make_album("Artist 2", "Album 2", 12);
  let album3 = make_album("Artist 3", "Album 3", 8);
  
  console.log(album1);
  console.log(album2);
  console.log(album3);

  
