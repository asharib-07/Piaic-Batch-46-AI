//------ 15 ------//---------------------------------------------------------
//----- Changing Guest List------//
console.log("\n")
console.log("\x1b[1;4mChanging Guest List.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

let dinnerGuest: string[] = ["Chatur", "Raju", "Wangru"];
let guestUnableToAttend: string = "Raju";
let newGuest: string = "Farhan";

console.log(guestUnableToAttend + " is unable to attend the dinner.");

// Replace the guest who can't make it with the new guest
let indexOfUnableGuest: number = dinnerGuest.indexOf(guestUnableToAttend);
if (indexOfUnableGuest !== -1) {
  dinnerGuest[indexOfUnableGuest] = newGuest;
}

// Send out the new set of invitations
for (let i = 0; i < dinnerGuest.length; i++) {
  console.log("Dear " + dinnerGuest[i] + ", you are cordially invited to dinner. Please join us for an evening of delightful conversations.");
}

//------ 16 ------//---------------------------------------------------------
//----- More Guest------//
console.log("\n")
console.log("\x1b[1;4mMore Guest.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

let dinnerGuestss: string[] = ["Chatur", "Raju", "Wangru"];
let guestsUnableToAttend: string = "Raju";
let newGuesst: string = "Farhan";

console.log("Good news! We found a bigger dinner table.");

// Replace the guest who can't make it with the new guest
let indexOfUnableGuests: number = dinnerGuestss.indexOf(guestsUnableToAttend);
if (indexOfUnableGuests !== -1) {
  dinnerGuestss[indexOfUnableGuests] = newGuesst;
}

// Add new guests to the array
dinnerGuestss.unshift("virus"); // Add at the beginning
dinnerGuestss.splice(Math.floor(dinnerGuestss.length / 2), 0, "Millimeter"); // Add in the middle
dinnerGuestss.push("Priya"); // Add at the end

// Send out the new set of invitations
for (let i = 0; i < dinnerGuestss.length; i++) {
  console.log("Dear " + dinnerGuestss[i] + ", you are cordially invited to dinner. Please join us for an evening of delightful conversations.");
}

//------ 17 ------//---------------------------------------------------------
//----- Shrinking Guest List------//
console.log("\n")
console.log("\x1b[1;4mShrinking Guest List.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

let DinnerGuests: string[] = ["chatur", "Raju", "Wangru", "Farhan", "Virus", "Millimiter"];

console.log("Apologies, we can only invite two people for dinner.");

// Remove guests until only two names remain
while (DinnerGuests.length > 2) {
  let RemovedGuesst: string = DinnerGuests.pop();
  console.log("Sorry, " + RemovedGuesst + ", we can't invite you to dinner.");
}

// Send invitations to the remaining two guests
for (let i = 0; i < DinnerGuests.length; i++) {
  console.log("Dear " + DinnerGuests[i] + ", you are still invited to dinner. Please join us for an evening of delightful conversations.");
}

// Clear the list of guests
DinnerGuests = [];

console.log("Final guest list:", DinnerGuests);

//------ 18 ------//---------------------------------------------------------
//----- Seeing the World------//
console.log("\n")
console.log("\x1b[1;4mSeeing the World.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

let placesToVisit: string[] = ["Italy", "U.A.E", "Zimbawe", "Pakistan", "Canada"];

// Print the array in its original order
console.log("Original Order:", placesToVisit);

// Print the array in alphabetical order without modifying the actual list
console.log("Alphabetical Order:", [...placesToVisit].sort());

// Show that the array is still in its original order
console.log("Original Order (Unchanged):", placesToVisit);

// Print the array in reverse alphabetical order without changing the order of the original list
console.log("Reverse Alphabetical Order:", [...placesToVisit].sort().reverse());

// Show that the array is still in its original order
console.log("Original Order (Unchanged):", placesToVisit);

// Reverse the order of the list
placesToVisit.reverse();
console.log("Reversed Order:", placesToVisit);

// Reverse the order of the list again
placesToVisit.reverse();
console.log("Original Order (Unchanged):", placesToVisit);

// Sort the array in alphabetical order
placesToVisit.sort();
console.log("Alphabetical Order:", placesToVisit);

// Sort the array in reverse alphabetical order
placesToVisit.sort().reverse();
console.log("Reverse Alphabetical Order:", placesToVisit);


