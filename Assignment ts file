function show_magicians(magicians: string[]) {
    for (let i = 0; i < magicians.length; i++) {
      console.log(magicians[i]);
    }
  }
  
  // Creating an array of magician's names
  let magicianNames: string[] = ["Harry Houdini", "David Copperfield", "Penn Jillette", "Teller"];
  
  // Calling the show_magicians() function with the magicianNames array
  show_magicians(magicianNames);

//------ 42 ------//---------------------------------------------------------
//-----Great Magicians -------//
console.log("\n")
console.log("\x1b[1;4mGreat Magicians.\x1b[0m");
console.log("-------------------------------------------------------------------\n");
  
function make_great(magicians: string[]) {
    for (let i = 0; i < magicians.length; i++) {
      magicians[i] = "the Great " + magicians[i];
    }
  }
  
  function Great_magicians(magicians: string[]) {
    for (let i = 0; i < magicians.length; i++) {
      console.log(magicians[i]);
    }
  }
  
  // Creating an array of magician's names
  let MagicianNames: string[] = ["Harry Houdini", "David Copperfield", "Penn Jillette", "Teller"];
  
  // Modifying the magicianNames array using the make_great() function
  make_great(MagicianNames);
  
  // Calling the show_magicians() function to display the modified list
  Great_magicians(MagicianNames);

  //------ 43 ------//---------------------------------------------------------
//-----Unchanges Magicians -------//
console.log("\n")
console.log("\x1b[1;4mUnchanges Magicians.\x1b[0m");
console.log("-------------------------------------------------------------------\n");
  
  
//------ 44 ------//---------------------------------------------------------
//-----Sandwiches -------//
console.log("\n")
console.log("\x1b[1;4mSandwiches.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

function order_sandwich(...items: string[]) {
    console.log("Sandwich order:");
  
    if (items.length === 0) {
      console.log("No items selected.");
    } else {
      console.log("Items:");
  
      for (let i = 0; i < items.length; i++) {
        console.log("- " + items[i]);
      }
    }
  
    console.log(""); // Print an empty line for separation
  }
  
  // Calling the function with different number of arguments
  order_sandwich("Bread", "Ham", "Cheese");
  order_sandwich("Bread", "Turkey");
  order_sandwich();
  
//------ 45 ------//---------------------------------------------------------
//-----Cars -------//
console.log("\n")
console.log("\x1b[1;4mCars.\x1b[0m");
console.log("-------------------------------------------------------------------\n");

function store_car_info(manufacturer: string, modelName: string, color: string, year: string, ...kwargs: any): object {
    let carInfo: any = {
      manufacturer: manufacturer,
      modelName: modelName,
      color: color,
      year: year,
    };
  
    // Store additional key-value pairs
    for (let key in kwargs) {
      carInfo[key] = kwargs[key];
    }
  
    return carInfo;
  }
  
  // Calling the function with required information and additional key-value pairs
  let car = store_car_info("Ford", "Mustang", "Red", "2022");
  
  console.log(car);
  
  console.log("-----------------------------THE END--------------------------------------\n");
  
